{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2017",
		"noImplicitAny": true,
		"declaration": false,
		"removeComments": true,
		"preserveConstEnums": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"sourceMap": true,
		"moduleResolution": "node",
		"outDir": "./tasks"
	},
	"include": ["src/class/", "src"],
	"exclude": [
		"node_modules"
	]
}